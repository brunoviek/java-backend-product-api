# Application Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=default

# Redis Configuration (Optional - uncomment when Redis is available)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TIMEOUT=60000

# Cache Configuration
# CACHE_TYPE=redis
# CACHE_TTL=7200000

# Resilience4j Circuit Breaker
CIRCUIT_BREAKER_FAILURE_RATE=50
CIRCUIT_BREAKER_WAIT_DURATION=30s
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10

# Resilience4j Retry
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_DURATION=500ms
RETRY_BACKOFF_MULTIPLIER=2

# Actuator Endpoints
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_MERCADOLIVRE=DEBUG
